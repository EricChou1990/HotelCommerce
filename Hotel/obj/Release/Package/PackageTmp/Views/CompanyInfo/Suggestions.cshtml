@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
<script type="text/javascript">
    function succ(data) {
        alert(data);
    }
</script>
@using (Ajax.BeginForm("DoSugg", "CompanyInfo", new AjaxOptions { OnSuccess = "succ", Confirm = "确认要提交吗?" })) 
{

    <div class="cdiv">
        <div class="item">
            <div class="itemtitle">
                <span>*</span>客户姓名：
            </div>
            <div class="itemcontent">
                @Html.TextBox("CustomerName", "", new { @class="txt"})
              @Html.ValidationMessage("CustomerName")
            </div>
        </div>
        <div class="item">
            <div class="itemtitle">
                <span>*</span>您的消费情况：
            </div>
            <div class="itemcontent">
                @Html.TextBox("ConsumeDesc", "", new { @class = "txt" })
                @Html.ValidationMessage("ConsumeDesc")
              
            </div>
        </div>
        <div class="item">
            <div class="itemtitle">
                <span>*</span> 联系电话：
            </div>

            <div class="itemcontent">
                @Html.TextBox("PhoneNumber", "", new { @class = "txt" })
                @Html.ValidationMessage("PhoneNumber")             
            </div>
        </div>

        <div class="item">
            <div class="itemtitle">
                <span>*</span>电子邮件：
            </div>
            <div class="itemcontent">
                @Html.TextBox("Email", "", new { @class = "txt" })
                @Html.ValidationMessage("Email")                
             
            </div>
        </div>
        <div class="item">
            <div class="itemtitle">
                <span>*</span> 投诉建议：
            </div>
            <div class="itemcontent">
                @Html.TextArea("SuggestionDesc", "", new { @class = "txt" })
                @Html.ValidationMessage("SuggestionDesc")                
             
            </div>
        </div>
        <div class="item">
            <div class="itemtitle">
                <span>*</span>   验证码：
            </div>
            <div class="itemcontent">
                @Html.TextBox("ValidateCode", "", new { @class = "txt" })  
                <img alt="验证码图片" id="ImgValidateCode" title="看不清？点击换一个"
                     src="/CompanyDishes/ValidateCode" onclick="this.src=this.src+'?'" />
              @Html.ValidationMessage("yzm")
            </div>
        </div>
        <div class="item">
            <div class="itemtitle">
            </div>
            <div class="itemcontent">
                <button id="btnSubmit" class="btncss">提交投诉</button>
            </div>
        </div>
    </div>
}
