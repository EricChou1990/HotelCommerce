<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
        <title></title>
    <link rel="Shortcut Icon" href="~/Styles/Images/clogo.ico" />
    <link href="~/Styles/MainPage.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/MasterPage.css" rel="stylesheet" type="text/css" />
    <script language="JavaScript" type="text/javascript">
        var NowFrame = 1;
        var MaxFrame = 2;
        function scroll1(d1) {
            if (Number(d1)) {
                NowFrame = d1;                
            }
            for (var i = 1; i < (MaxFrame + 1) ; i++) {
                if (NowFrame == i) {
                    document.getElementById(NowFrame).style.display = 'block';   
                }
                else {
                    document.getElementById(i).style.display = 'none';
                }
            }
            {
                if (NowFrame == MaxFrame)   
                    NowFrame = 1;
                else
                    NowFrame++;
            }
            theTimer = setTimeout('scroll1()', 3000);  
        }
    </script>
</head>
<body onload="scroll1(1)">
