@{
    ViewBag.Title = "RecruitmentPublish";
    Layout = "~/Areas/HotelAdmin/Views/Shared/AdminLayOut.cshtml";
}

<style type="text/css">
    .txt {
        width:80px;
    }
</style>
@using (Html.BeginForm("DoRecruitment", "Recruitment", FormMethod.Post))
{ 
    <div class="txtContentdiv">
        <div class="txtItemdiv">
            职位名称：@Html.TextBox("PostName", "",new {@class="txt"})
          
            职位类型：
            <select id="PostType" name="PostType">
                <option>全职</option>
                <option>兼职</option>
            </select>
            工作经验：
            <select id="Experience" name="Experience">
                <option>1年</option>
                <option>2年</option>
                <option>3年</option>
                <option>4年</option>
                <option>5年</option>
            </select>
            学历要求：
            <select id="EduBackground" name="EduBackground">
                <option>本科</option>
                <option>硕士</option>
                <option>专科</option>
                <option>高中</option>
            </select>
            招聘人数：
            @Html.TextBox("RequireCount", "", new { @class = "txt" })        
            工作地点：           
            @Html.TextBox("PostPlace", "", new { @class = "txt" })
        </div>
        <div class="txtItemdiv">
            职位描述：
        </div>
        <div class="txtItemdiv">
            @Html.TextArea("PostRequire", new { cols="100", rows="10"})       

        </div>
        <div class="txtItemdiv">
            具体要求：
        </div>
        <div class="txtItemdiv">
            @Html.TextArea("PostDesc",new {cols="100", rows="10"})          
          
        </div>
        <div class="txtItemdiv">
            联系人：         
            @Html.TextBox("Manager")            
            电话：@Html.TextBox("PhoneNumber")           
            
            电子邮件：@Html.TextBox("Email")
        </div>
        <div class="txtItemdiv">
            <button class="btncss" id="btnModify" type="submit">立即发布</button>
        </div>
    </div>
}
    
