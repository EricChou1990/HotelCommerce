                    <li>@Html.ActionLink("environment", "Environment", "CompanyDishes")</li>
                    <li>@Html.ActionLink("online booking", "DishesBooks", "CompanyDishes")</li>
                    <li>@Html.ActionLink("join us", "JoinUs", "CompanyInfo")</li>
                    <li>@Html.ActionLink("suggestion", "Suggestions", "CompanyInfo")</li>
                    <li>@Html.ActionLink("recruitment", "ZhaoPinList", "CompanyInfo")</li>
                    <li>@Html.ActionLink("story", "AboutUs", "CompanyInfo")</li>
                </ul>
            </div>
        </div>
